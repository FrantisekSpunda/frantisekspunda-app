{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "baseUrl": "./resources/js",
    "paths": {
      "@app/*": ["../../*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
